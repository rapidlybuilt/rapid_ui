<%= component_tag class: "demo", data: { controller: stimulus_controller_name } do %>
  <div class="demo-content<%= " demo-flex" unless skip_flex %>">
    <%= html %>
  </div>

  <div class="demo-code-tabs">
    <%= tab_button erb_code, "ERB", "erb" %>
    <%= tab_button ruby_code, "Ruby", "ruby" %>
    <%= tab_button html_code, "HTML", "html" %>
  </div>

  <%= tab_panel erb_code, "erb" %>
  <%= tab_panel ruby_code, "ruby" %>
  <%= tab_panel html_code, "html" %>
<% end %>
