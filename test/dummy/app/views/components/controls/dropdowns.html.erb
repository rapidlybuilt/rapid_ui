<% layout.head.title = ["Dropdowns", "Controls"] %>
<% layout.subheader.breadcrumbs.build("Dropdowns") %>

<%= build_table_of_contents_sidebar typography: true do |headers| %>
  <%= headers.h1 "Dropdowns" %>
  <p class="typography-body">Dropdown components with various styles and states using the theme.</p>

  <div class="demo-section">
    <%= headers.h2 "Variants" %>
    <p class="demo-description">Dropdown variants with their default styling.</p>
    <%= demo_code helper: :component_controls_dropdowns_variants do %>
      <%= primary_dropdown "Primary" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>

      <%= secondary_dropdown "Secondary" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>

      <%= naked_dropdown "Naked" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>

      <%= success_dropdown "Success" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>

      <%= warning_dropdown "Warning" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>

      <%= danger_dropdown "Danger" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Outline Variants" %>
    <p class="demo-description">Outline dropdown variants with transparent backgrounds and colored borders.</p>
    <%= demo_code helper: :component_controls_dropdowns_outline_variants do %>
      <%= outline_primary_dropdown "Outline Primary" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>

      <%= outline_success_dropdown "Outline Success" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>

      <%= outline_warning_dropdown "Outline Warning" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>

      <%= outline_danger_dropdown "Outline Danger" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Icons" %>
    <p class="demo-description">Dropdowns with icons in both trigger and menu items.</p>
    <%= demo_code helper: :component_controls_dropdowns_with_icons do %>
      <%= primary_dropdown icon("user"), "Profile" do |menu| %>
        <%= menu.item "Profile", "#", icon: "user" %>
        <%= menu.item "Settings", "#", icon: "settings" %>
        <%= menu.item "Sign Out", "#", icon: "x" %>
      <% end %>

      <%= secondary_dropdown icon("settings"), "Options" do |menu| %>
        <%= menu.item "Search", "#", icon: "search" %>
        <%= menu.item "Help", "#", icon: "info" %>
        <%= menu.item "Delete", "#", icon: "trash" %>
      <% end %>

      <%= success_dropdown "Skip Caret", skip_caret: true do |menu| %>
        <%= menu.item "Search", "#", icon: "search" %>
        <%= menu.item "Help", "#", icon: "info" %>
        <%= menu.item "Delete", "#", icon: "trash" %>
      <% end %>

      <%= danger_dropdown do |menu| %>
        <%= menu.item "Search", "#", icon: "search" %>
        <%= menu.item "Help", "#", icon: "info" %>
        <%= menu.item "Delete", "#", icon: "trash" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Sizes" %>
    <p class="demo-description">Different dropdown sizes using the size parameter.</p>
    <%= demo_code helper: :component_controls_dropdowns_sizes do %>
      <%= primary_dropdown "Small", size: "sm" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Medium (Default)" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Large", size: "lg" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Disabled" %>
    <p class="demo-description">Disabled state for dropdown variants.</p>
    <%= demo_code helper: :component_controls_dropdowns_disabled do %>
      <%= primary_dropdown "Primary Disabled", disabled: true do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>

      <%= secondary_dropdown "Secondary Disabled", disabled: true do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>

      <%= naked_dropdown "Naked Disabled", disabled: true do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Positioning" %>
    <p class="demo-description">Dropdowns with different positioning options.</p>
    <%= demo_code helper: :component_controls_dropdowns_positioning do %>
      <%= primary_dropdown "Left Aligned" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Right Aligned", align: "right" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Center Aligned", align: "center" do |menu| %>
        <%= menu.item "Action 1", "#" %>
        <%= menu.item "Action 2", "#" %>
        <%= menu.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Drop Up", direction: "up" do |menu| %>
        <%= menu.item "Up", "#" %>
        <%= menu.item "Position", "#" %>
      <% end %>

      <%= primary_dropdown "Drop Up-Right", align: "right", direction: "up" do |menu| %>
        <%= menu.item "Up", "#" %>
        <%= menu.item "Position", "#" %>
      <% end %>

      <%= primary_dropdown "Drop Up-Center", align: "center", direction: "up" do |menu| %>
        <%= menu.item "Up", "#" %>
        <%= menu.item "Position", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Active & Disabled" %>
    <p class="demo-description">Dropdown menu items can have active and disabled states.</p>
    <div class="demo-content">
      <%= demo_code helper: :component_controls_dropdowns_active_and_disabled do %>
        <%= primary_dropdown "Active & Disabled" do |menu| %>
          <%= menu.item "Active Item", "#", active: true %>
          <%= menu.item "Normal Item", "#" %>
          <%= menu.item "Disabled Item", "#", disabled: true %>
        <% end %>

        <%= secondary_dropdown "With Icons" do |menu| %>
          <%= menu.item "Active Profile", "#", icon: "user", active: true %>
          <%= menu.item "Settings", "#", icon: "settings" %>
          <%= menu.item "Disabled Billing", "#", icon: "hash", disabled: true %>
        <% end %>

        <%= success_dropdown "Success Variant" do |menu| %>
          <%= menu.item "Active Success", "#", active: true %>
          <%= menu.item "Normal Success", "#" %>
          <%= menu.item "Disabled Success", "#", disabled: true %>
        <% end %>

        <%= danger_dropdown "Danger Variant" do |menu| %>
          <%= menu.item "Active Danger", "#", active: true %>
          <%= menu.item "Normal Danger", "#" %>
          <%= menu.item "Disabled Danger", "#", disabled: true %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Headers & Dividers" %>
    <p class="demo-description">Dropdowns with headers, dividers, and various menu item types for each variant.</p>
    <%= demo_code helper: :component_controls_dropdowns_menu_headers_and_dividers do %>
      <%= primary_dropdown "Primary" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= secondary_dropdown "Secondary" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= naked_dropdown "Naked" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= success_dropdown "Success" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= warning_dropdown "Warning" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= danger_dropdown "Danger" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= outline_primary_dropdown "Outline Primary" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= outline_success_dropdown "Outline Success" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= outline_warning_dropdown "Outline Warning" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>

      <%= outline_danger_dropdown "Outline Danger" do |menu| %>
        <%= menu.header "Account" %>
        <%= menu.item "Profile", "#" %>
        <%= menu.divider %>
        <%= menu.item "Sign Out", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Menu HTML" %>
    <p class="demo-description">Dropdowns with HTML content in the menu instead of menu items.</p>
    <%= demo_code helper: :component_controls_dropdowns_with_html_content do %>
      <%= primary_dropdown "Profile" do |menu| %>
        <p class="m-2 text-white">This is some HTML content in the menu.</p>
      <% end %>

      <%= secondary_dropdown "Options" do |menu| %>
        <ul class="m-4">
          <li>Item 1.</li>
          <li>Item 2.</li>
          <li>Item 3.</li>
        </ul>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Button & Menu HTML" %>
    <p class="demo-description"><%= link_to "ViewComponent Slots", "https://viewcomponent.org/guide/slots.html", class: "typography-link" %> gives you full control over the HTML content of the dropdown's button and menu.</p>
    <%= demo_code do %>
      <%= render new_success_dropdown do |dropdown| %>
        <% dropdown.button.with_content icon("info"), "My Button" %>
        <% dropdown.with_menu tag.p("This is some HTML content in the menu.", class: "m-4") %>
      <% end %>

      <%= render new_outline_warning_dropdown do |dropdown| %>
        <% dropdown.button.with_content do %>
          <code>My Button</code> <%= icon("info", class: "inline") %>
        <% end %>

        <% dropdown.with_menu do %>
          <p class="m-4">This is some HTML content in the menu.</p>
        <% end %>
      <% end %>

      <%= render new_outline_warning_dropdown do |dropdown| %>
        <% dropdown.with_button icon("info") %>
        <% dropdown.with_menu do %>
          <p class="m-4">This is some HTML content in the menu.</p>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
