<% layout.head.title = ["Groups", "Forms"] %>
<% layout.subheader.with_breadcrumb("Groups") %>

<%= build_table_of_contents_sidebar typography: true do |headers| %>
  <div class="demo-header">
    <%= headers.h1 "Form Groups" %>
    <p class="typography-body">Form field groups with automatic grid layout and Bootstrap-style styling.</p>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Basic Form" %>
    <p class="demo-description">A complete form with various field types using the grid layout system.</p>
    <%= demo_code helper: :component_forms_groups_basic_form do %>
      <%= field_groups "basic" do |f| %>
        <% f.with_group :email, col: 6 do |g| %>
          <% g.email_field_tag %>
        <% end %>
        <% f.with_group :password, col: 6 do |g| %>
          <% g.password_field_tag %>
        <% end %>
        <% f.with_group :address, col: 12 do |g| %>
          <% g.text_field_tag placeholder: "1234 Main St" %>
        <% end %>
        <% f.with_group :address_2, col: 12 do |g| %>
          <% g.with_label("Address 2") %>
          <% g.text_field_tag placeholder: "Apartment, studio, or floor" %>
        <% end %>
        <% f.with_group :city, col: 6 do |g| %>
          <% g.text_field_tag "Atlanta" %>
        <% end %>
        <% f.with_group :state, col: 4 do |g| %>
          <% g.select_tag options_for_select([ "Choose...", "Option 1", "Option 2" ], selected: "Choose...") %>
        <% end %>
        <% f.with_group :zip, col: 2 do |g| %>
          <% g.text_field_tag %>
        <% end %>
        <% f.with_group :terms_of_service, check: true, col: 12 do |g| %>
          <% g.with_label("Check me out") %>
          <% g.checkbox_tag %>
        <% end %>
        <% f.with_submit_group "Sign in", col: 12 %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Horizontal Form" %>
    <p class="demo-description">A complete form with various field types using the grid layout system.</p>
    <%= demo_code do %>
      <%= field_groups "horizontal_demo", horizontal: true, label_col: 2 do |f| %>
        <% f.with_group :email, col: 12 do |g| %>
          <% g.text_field_tag %>
        <% end %>
        <% f.with_group :first_name, col: 6 do |g| %>
          <% g.text_field_tag %>
        <% end %>
        <% f.with_group :last_name, col: 6 do |g| %>
          <% g.text_field_tag %>
        <% end %>
        <% f.with_group :terms_of_service, check: true, col: 12 do |g| %>
          <% g.with_label("Check me out") %>
          <% g.checkbox_tag %>
        <% end %>
        <% f.with_submit_group "Sign in", col: 12 %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Gap Sizes" %>
    <p class="demo-description">Forms with different gap sizes using Tailwind's gap utilities (gap-1 through gap-12).</p>
    <%= demo_code helper: :component_forms_groups_gap_sizes_form do %>
      <%= field_groups "gap_sizes_1", gap: 1 do |f| %>
        <% f.with_group :small_gap_1, col: 6 do |g| %>
          <% g.with_label("Small Gap (gap-1)") %>
          <% g.text_field_tag %>
        <% end %>
        <% f.with_group :small_gap_2, col: 6 do |g| %>
          <% g.with_label("Field 2") %>
          <% g.text_field_tag %>
        <% end %>
      <% end %>
      <br>
      <%= field_groups "gap_sizes_2", gap: 12 do |f| %>
        <% f.with_group :large_gap_1, col: 6 do |g| %>
          <% g.with_label("Large Gap (gap-12)") %>
          <% g.text_field_tag %>
        <% end %>
        <% f.with_group :large_gap_2, col: 6 do |g| %>
          <% g.with_label("Field 2") %>
          <% g.text_field_tag %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>

