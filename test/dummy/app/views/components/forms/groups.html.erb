<% layout.head.title = ["Groups", "Forms"] %>
<% layout.subheader.with_breadcrumb("Groups") %>

<%= build_table_of_contents_sidebar typography: true do |headers| %>
  <div class="demo-header">
    <%= headers.h1 "Form Groups" %>
    <p class="typography-body">Form field groups with automatic grid layout and Bootstrap-style styling.</p>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Basic Form" %>
    <p class="demo-description">A complete form with various field types using the grid layout system.</p>
    <%= demo_code do %>
      <%= field_groups "basic", class: "gap-3" do |f| %>
        <% f.with_group :email, col: 6 do |g| %>
          <% g.with_email_field %>
        <% end %>
        <% f.with_group :password, col: 6 do |g| %>
          <% g.with_password_field %>
        <% end %>
        <% f.with_group :address, col: 12 do |g| %>
          <% g.with_text_field placeholder: "1234 Main St" %>
        <% end %>
        <% f.with_group :address_2, label_text: "Address 2", col: 12 do |g| %>
          <% g.with_text_field placeholder: "Apartment, studio, or floor" %>
        <% end %>
        <% f.with_group :city, col: 6 do |g| %>
          <% g.with_text_field %>
        <% end %>
        <% f.with_group :state, col: 4 do |g| %>
          <% g.with_select :state, options_for_select([ "Choose...", "Option 1", "Option 2" ], selected: "Choose...") %>
        <% end %>
        <% f.with_group :zip, col: 2 do |g| %>
          <% g.with_text_field %>
        <% end %>
        <% f.with_group :terms_of_service, check: true, label_text: "Check me out", col: 12 do |g| %>
          <% g.with_checkbox %>
        <% end %>
        <% f.with_submit_group "Sign in", size: 12 %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <%= headers.h2 "Gap Sizes" %>
    <p class="demo-description">Forms with different gap sizes using Tailwind's gap utilities (gap-1 through gap-12).</p>
    <%= demo_code do %>
      <%= field_groups "gap_sizes_1", class: "gap-1" do |f| %>
        <% f.with_group :small_gap_1, label_text: "Small Gap (gap-1)", col: 6 do |g| %>
          <% g.with_text_field %>
        <% end %>
        <% f.with_group :small_gap_2, label_text: "Field 2", col: 6 do |g| %>
          <% g.with_text_field %>
        <% end %>
      <% end %>
      <br>
      <%= field_groups "gap_sizes_2", class: "gap-12" do |f| %>
        <% f.with_group :large_gap_1, label_text: "Large Gap (gap-12)", col: 6 do |g| %>
          <% g.with_text_field %>
        <% end %>
        <% f.with_group :large_gap_2, label_text: "Field 2", col: 6 do |g| %>
          <% g.with_text_field %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>

