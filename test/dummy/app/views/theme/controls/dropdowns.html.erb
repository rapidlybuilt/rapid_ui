<% layout.head.title = ["Dropdowns", "Controls"] %>
<% layout.subheader.breadcrumbs.build("Dropdowns") %>

<section>
  <h1 class="typography-h1">Dropdowns</h1>
  <p class="typography-body">Dropdown components with various styles and states using the theme.</p>

  <div class="demo-section">
    <h2 id="variants" class="typography-h2"><%= link_to "Variants", "#variants" %></h2>
    <p class="demo-description">Dropdown variants with their default styling.</p>
    <%= demo_code do %>
      <%= primary_dropdown "Primary" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= secondary_dropdown "Secondary" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= naked_dropdown "Naked" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= success_dropdown "Success" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= warning_dropdown "Warning" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= danger_dropdown "Danger" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <h2 id="outline-variants" class="typography-h2"><%= link_to "Outline Variants", "#outline-variants" %></h2>
    <p class="demo-description">Outline dropdown variants with transparent backgrounds and colored borders.</p>
    <%= demo_code do %>
      <%= outline_primary_dropdown "Outline Primary" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= outline_success_dropdown "Outline Success" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= outline_warning_dropdown "Outline Warning" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= outline_danger_dropdown "Outline Danger" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.divider %>
        <%= d.item "Action 3", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <h2 id="sizes" class="typography-h2"><%= link_to "Sizes", "#sizes" %></h2>
    <p class="demo-description">Different dropdown sizes using the size parameter.</p>
    <%= demo_code do %>
      <%= primary_dropdown "Small", size: "sm" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Medium (Default)" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Large", size: "lg" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <h2 id="disabled" class="typography-h2"><%= link_to "Disabled", "#disabled" %></h2>
    <p class="demo-description">Disabled state for dropdown variants.</p>
    <%= demo_code do %>
      <%= primary_dropdown "Primary Disabled", disabled: true do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= secondary_dropdown "Secondary Disabled", disabled: true do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= naked_dropdown "Naked Disabled", disabled: true do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <h2 id="with-icons" class="typography-h2"><%= link_to "With Icons", "#with-icons" %></h2>
    <p class="demo-description">Dropdowns with icons in both trigger and menu items.</p>
    <%= demo_code skip_html: true do %>
      <%= primary_dropdown (icon("user") + " Profile") do |d| %>
        <%= d.item "#" do %>
          <%= icon("user", size: 16) %>
          Profile
        <% end %>
        <%= d.item "#" do %>
          <%= icon("settings", size: 16) %>
          Settings
        <% end %>
        <%= d.item "#" do %>
          <%= icon("x", size: 16) %>
          Sign Out
        <% end %>
      <% end %>

      <%= secondary_dropdown (icon("settings", size: 16) + " Options") do |d| %>
        <%= d.item "#" do %>
          <%= icon("search", size: 16) %>
          Search
        <% end %>
        <%= d.item "#" do %>
          <%= icon("info", size: 16) %>
          Help
        <% end %>
        <%= d.item "#" do %>
          <%= icon("trash", size: 16) %>
          Delete
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <h2 id="menu-structure" class="typography-h2"><%= link_to "Menu Structure", "#menu-structure" %></h2>
    <p class="demo-description">Dropdowns with headers, dividers, and various menu item types for each variant.</p>
    <%= demo_code do %>
      <%= primary_dropdown "Primary Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
        <%= d.item "Settings", "#" %>
        <%= d.item "Billing", "#" %>
        <%= d.divider %>
        <%= d.header "Actions" %>
        <%= d.item "Export Data", "#" %>
        <%= d.item "Import Data", "#" %>
        <%= d.divider %>
        <%= d.item "Sign Out", "#" %>
      <% end %>

      <%= secondary_dropdown "Secondary Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
        <%= d.item "Settings", "#" %>
        <%= d.item "Billing", "#" %>
        <%= d.divider %>
        <%= d.header "Actions" %>
        <%= d.item "Export Data", "#" %>
        <%= d.item "Import Data", "#" %>
        <%= d.divider %>
        <%= d.item "Sign Out", "#" %>
      <% end %>

      <%= naked_dropdown "Naked Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
      <% end %>

      <%= success_dropdown "Success Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
      <% end %>

      <%= warning_dropdown "Warning Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
      <% end %>

      <%= danger_dropdown "Danger Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
      <% end %>

      <%= outline_primary_dropdown "Outline Primary Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
      <% end %>

      <%= outline_success_dropdown "Outline Success Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
      <% end %>

      <%= outline_warning_dropdown "Outline Warning Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
      <% end %>

      <%= outline_danger_dropdown "Outline Danger Structure" do |d| %>
        <%= d.header "Account" %>
        <%= d.item "Profile", "#" %>
      <% end %>
    <% end %>
  </div>

  <div class="demo-section">
    <h2 id="positioning" class="typography-h2"><%= link_to "Positioning", "#positioning" %></h2>
    <p class="demo-description">Dropdowns with different positioning options.</p>
    <%= demo_code do %>
      <%= primary_dropdown "Left Aligned" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Right Aligned", align: "right" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>

      <%= primary_dropdown "Center Aligned", align: "center" do |d| %>
        <%= d.item "Action 1", "#" %>
        <%= d.item "Action 2", "#" %>
        <%= d.item "Action 3", "#" %>
      <% end %>
    <% end %>
  </div>
</section>
