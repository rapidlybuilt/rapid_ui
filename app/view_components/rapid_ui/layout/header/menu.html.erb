<div id="<%= elem_id %>" data-controller="dropdown" class="<%= css_class %>">
  <button data-action="click->dropdown#toggle" class="header-btn cursor-pointer" aria-controls="#<%= dropdown_elem_id %>" aria-haspopup="true" aria-label="<%= t(".toggle_dropdown_menu", name: id) %>">
    <%= name %> <%= render icon %>
  </button>
  <div id="<%= dropdown_elem_id %>" data-dropdown-target="content" class="hidden header-dropdown<%= " header-dropdown-right" if align_right? %>">
    <%= render items %>
  </div>
</div>
