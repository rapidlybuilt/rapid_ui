<!DOCTYPE html>
<html>
  <%= head %>
  <%= component_tag do %>
    <%= render header if header? %>
    <%= render subheader if subheader? %>

    <%= render main_container do %>
      <%= safe_join sidebars %>
      <%= render main, &layout_content_block %>
    <% end %>

    <%= render footer if footer? %>
  <% end %>
</html>
