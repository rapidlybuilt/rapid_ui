#!/usr/bin/env ruby

require_relative '../lib/rapid_ui/commands/tailwind_css'

RapidUI::Commands::TailwindCSS.new(
  docs: {
    input: "docs/app/assets/stylesheets/application.tailwind.css",
    output: "docs/app/assets/builds/application.css",
    build_dir: "docs/app/assets/builds",
  },
  nil => {
    input: "app/assets/stylesheets/rapid_ui/application.tailwind.css",
    output: "app/assets/builds/rapid_ui/application.css",
    build_dir: "app/assets/builds/rapid_ui",
  }
).run(ARGV)
